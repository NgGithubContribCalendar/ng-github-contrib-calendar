- var h = 16;
- var w = 21;
ng-container(*ngIf='isValidFlag')
  img(
  *ngIf='flag==="en"; else otherFlags',
  matTooltip='English',
  style='height:' + h + 'px;width:' + w + 'px',
  src='https://cdn.jsdelivr.net/gh/Alorel/flag-icon-css@2.8.0/flags/4x3/gb.svg',
  alt='GB'
  )
  ng-template(#otherFlags)
    svg(
    xmlns="http://www.w3.org/2000/svg",
    height=16,
    width=21,
    viewBox='0 0 640 480'
    )
      g(*ngIf='flag==="ru"; else showLT' fill-rule="evenodd" stroke-width="1pt" matTooltip='Русский')
        path(fill="#fff" d="M0 0h640v480H0z")
        path(fill="#0039a6" d="M0 160.003h640V480H0z")
        path(fill="#d52b1e" d="M0 319.997h640V480H0z")
      ng-template(#showLT)
        g(fill-rule="evenodd" transform="matrix(.64143 0 0 .96773 0 0)" stroke-width="1pt" matTooltip='Lietuvių')
          rect(transform="matrix(.93865 0 0 .69686 0 0)" rx="0" ry="0" width="1063" height="708.66" fill="#007308")
          rect(transform="matrix(.93865 0 0 .69686 0 0)" rx="0" ry="0" width="1063" y="475.56" height="236.22" fill="#bf0000")
          path(fill="#ffb300" d="M0 0h997.77v164.61H0z")
